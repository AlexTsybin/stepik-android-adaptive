<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="org.stepik.android.adaptive.pdd">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_circle"
        android:label="@string/app_name"
        android:hardwareAccelerated="true"
        android:name="org.stepik.android.adaptive.pdd.App"

        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name="org.stepik.android.adaptive.pdd.ui.activity.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name="org.stepik.android.adaptive.pdd.ui.activity.LaunchActivity" />

        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name="org.stepik.android.adaptive.pdd.ui.activity.StudyActivity" />

        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name="org.stepik.android.adaptive.pdd.ui.activity.LoginActivity" />

        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name="org.stepik.android.adaptive.pdd.ui.activity.RegisterActivity" />

        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name="org.stepik.android.adaptive.pdd.ui.activity.IntroActivity" />

        <activity
            android:theme="@style/AppTheme.NoActionBar.Dark"
            android:name="org.stepik.android.adaptive.pdd.ui.activity.PhotoViewActivity"/>

        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name="org.stepik.android.adaptive.pdd.ui.activity.SocialAuthActivity"/>

        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name="org.stepik.android.adaptive.pdd.ui.activity.StatsActivity"/>

        <receiver
            android:name=".receivers.BootCompletedReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".receivers.NotificationsReceiver"/>
    </application>

</manifest>
