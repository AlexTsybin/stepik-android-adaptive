<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:text="Восстановить серию из 8 ответов за купон на ошибку?"
            android:textColor="@color/colorDarkGrayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="16dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/circle_stroke"
                android:tint="@color/colorDarkGrayText"
                app:srcCompat="@drawable/ic_tickets" />

            <TextView
                android:text="14"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginTop="-14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dark_small_circle"/>

        </LinearLayout>

    </LinearLayout>
</layout>
