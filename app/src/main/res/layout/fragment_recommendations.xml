<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/fragment_recommendations_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primaryBackground">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/fragment_recommendations_appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:background="@color/primaryBackground"
                app:elevation="0dp">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/fragment_recommendations_toolbar"
                    android:title=""
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    android:theme="@style/AppTheme.ActionBarTheme" />

            </android.support.design.widget.AppBarLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:id="@+id/fragment_recommendations_progress_bar"/>

                <TextView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="center"
                    android:scaleX="0"
                    android:scaleY="0"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/easy_button_bg"
                    android:text="@string/too_easy"
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/fragment_recommendations_easy_reaction"
                    />


                <TextView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="center"
                    android:scaleX="0"
                    android:scaleY="0"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/hard_button_bg"
                    android:text="@string/too_hard"
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/fragment_recommendations_hard_reaction"
                    />

                <TextView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="center"
                    android:scaleX="0"
                    android:scaleY="0"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/correct_button_bg"
                    android:text="@string/correct"
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/fragment_recommendations_correct_reaction"
                    />

                <org.stepik.android.adaptive.pdd.ui.view.QuizCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/fragment_recommendations_container">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="344dp"
                        android:background="@drawable/shadow2"
                        android:id="@+id/fragment_recommendations_card">

                        <org.stepik.android.adaptive.pdd.ui.view.CardWebView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:layout_margin="0dp"
                            android:id="@+id/fragment_recommendations_question">
                        </org.stepik.android.adaptive.pdd.ui.view.CardWebView>

                    </RelativeLayout>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:id="@+id/fragment_recommendations_solve"
                        android:background="@drawable/button_background"
                        android:textColor="@color/button_text_color"
                        android:text="@string/attempt_button"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/fragment_recommendations_card"
                        android:layout_marginTop="-48dp"
                        android:layout_marginBottom="12dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shadow2"
                        android:layout_below="@id/fragment_recommendations_card"

                        android:layout_marginTop="-256dp"


                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"

                        android:layout_marginRight="12dp"
                        android:layout_marginEnd="12dp"

                        android:id="@+id/fragment_recommendations_answers_container">
                        <ProgressBar
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginBottom="24dp"
                            android:layout_marginTop="24dp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/fragment_recommendations_answers_progress"/>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/fragment_recommendations_answers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="24dp"/>
                    </RelativeLayout>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:id="@+id/fragment_recommendations_submit"
                        android:background="@drawable/button_background"
                        android:textColor="@color/button_text_color"
                        android:text="@string/make_submission"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/fragment_recommendations_answers_container"
                        android:layout_marginTop="-48dp"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone"/>

                </org.stepik.android.adaptive.pdd.ui.view.QuizCardView>
            </FrameLayout>
        </android.support.design.widget.CoordinatorLayout>

        <android.support.design.widget.NavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/drawer_header"
            app:menu="@menu/drawer_menu"
            android:id="@+id/fragment_recommendations_navigation"
            />

    </android.support.v4.widget.DrawerLayout>
</layout>

