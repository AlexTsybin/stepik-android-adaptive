<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/fragment_recommendations_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primaryBackground">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/fragment_recommendations_appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:background="@color/primaryBackground"
                app:elevation="0dp">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/fragment_recommendations_toolbar"
                    android:title=""
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    android:theme="@style/AppTheme.ActionBarTheme" />

            </android.support.design.widget.AppBarLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:id="@+id/fragment_recommendations_progress_bar"/>

                <TextView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="center"
                    android:scaleX="0"
                    android:scaleY="0"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/easy_button_bg"
                    android:text="@string/too_easy"
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/fragment_recommendations_easy_reaction"
                    />


                <TextView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="center"
                    android:scaleX="0"
                    android:scaleY="0"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/hard_button_bg"
                    android:text="@string/too_hard"
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/fragment_recommendations_hard_reaction"
                    />

                <TextView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="center"
                    android:scaleX="0"
                    android:scaleY="0"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/correct_button_bg"
                    android:text="@string/correct"
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/fragment_recommendations_correct_reaction"
                    />

                <org.stepik.android.adaptive.pdd.ui.view.QuizCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:id="@+id/fragment_recommendations_container">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <org.stepik.android.adaptive.pdd.ui.view.CardWebView
                            android:id="@+id/fragment_recommendations_question"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:layout_margin="0dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/fragment_recommendations_content">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorStroke" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:id="@+id/fragment_recommendations_answers_container"
                                android:clipToPadding="true">
                                <android.support.v7.widget.RecyclerView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/fragment_recommendations_answers" />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/colorStroke" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingStart="4dp"
                                android:paddingEnd="4dp">
                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.AppCompat.Button.Borderless"
                                    android:textColor="@color/button_text_color"
                                    android:text="@string/attempt_button"
                                    android:id="@+id/fragment_recommendations_solve"
                                    android:visibility="gone"
                                    android:layout_alignParentStart="true" />

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.AppCompat.Button.Borderless"
                                    android:textColor="@color/button_text_color"
                                    android:text="@string/make_submission"
                                    android:id="@+id/fragment_recommendations_submit"
                                    android:layout_alignParentStart="true" />

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.AppCompat.Button.Borderless"
                                    android:textColor="@color/button_text_color"
                                    android:text="@string/next"
                                    android:id="@+id/fragment_recommendations_next"
                                    android:layout_alignParentEnd="true" />

                                <LinearLayout
                                    android:id="@+id/fragment_recommendations_correct"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:orientation="horizontal"
                                    android:gravity="start"
                                    android:layout_marginStart="10dp"
                                    android:layout_alignParentStart="true" >
                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        app:srcCompat="@drawable/ic_correct"
                                        android:tint="@color/colorCorrect"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginEnd="6dp" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:textColor="@color/colorCorrect"
                                        android:text="@string/correct" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/fragment_recommendations_wrong"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:orientation="horizontal"
                                    android:gravity="start"
                                    android:layout_marginStart="10dp"
                                    android:layout_alignParentStart="true">
                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        app:srcCompat="@drawable/ic_wrong"
                                        android:tint="@color/colorWrong"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginEnd="6dp" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:textColor="@color/colorWrong"
                                        android:text="@string/wrong" />
                                </LinearLayout>

                                <ProgressBar
                                    android:visibility="gone"
                                    android:layout_margin="12dp"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_alignParentStart="true"
                                    android:id="@+id/fragment_recommendations_answers_progress" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </org.stepik.android.adaptive.pdd.ui.view.QuizCardView>
            </FrameLayout>
        </android.support.design.widget.CoordinatorLayout>

        <android.support.design.widget.NavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/drawer_header"
            app:menu="@menu/drawer_menu"
            android:id="@+id/fragment_recommendations_navigation" />

    </android.support.v4.widget.DrawerLayout>
</layout>

