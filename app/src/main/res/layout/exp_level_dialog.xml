<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/exp_level_dialog_body"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/exp_level_dialog_confetti"
            android:layout_width="match_parent"
            android:layout_height="220dp" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/exp_level_dialog_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:textSize="96sp"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal" />
                <TextView
                    android:id="@+id/exp_level_dialog_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textSize="24sp"
                    android:text="@string/exp_level_title"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal" />
            </LinearLayout>
        </FrameLayout>
        <include layout="@layout/stroke" />
        <Button
            android:id="@+id/continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/borderless_button_text_color"
            android:text="@string/ex_dialog_continue" />
    </LinearLayout>
</layout>
